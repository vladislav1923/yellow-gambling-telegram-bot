{
  "name": "ygb",
  "version": "1.0.0",
  "description": "yellow gambling bot for telegramm",
  "main": "dist/index.js",
  "scripts": {
    "start:prod": "clear & tsc & node ./dist/index.js",
    "start:dev": "clear & tsc && concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "lint": "clear & npx eslint src --fix",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "telegraf": "^4.4.2",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "concurrently": "^6.4.0",
    "eslint": "^8.3.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint . && git add -A ."
    }
  }
}
