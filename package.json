{
  "name": "ygb",
  "version": "1.0.0",
  "description": "yellow gambling bot for telegramm",
  "main": "dist/index.js",
  "scripts": {
    "dev": "clear && rm -rf ./dist && concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "test": "clear & npx jest --passWithNoTests",
    "lint": "clear & npx eslint src",
    "lint:fix": "clear && npx eslint src --fix",
    "husky:prepare": "husky install",
    "prod:start": "rm -rf ./dist && tsc && npx pm2 start ./dist/index.js --name bot",
    "prod:stop": "npx pm2 stop bot && npx pm2 delete bot",
    "prod:proccess": "npx pm2 monit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.24.0",
    "date-fns": "^2.26.0",
    "date-fns-tz": "^1.1.6",
    "dotenv": "^10.0.0",
    "pm2": "^5.1.2",
    "telegraf": "^4.4.2",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-jest": "^27.4.2",
    "concurrently": "^6.4.0",
    "eslint": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript-json-serializer": "^3.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run lint",
      "npm run test"
    ]
  }
}
